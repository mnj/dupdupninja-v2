<Window
    x:Class="DupdupNinjaWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="dupdupninja">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <muxc:MenuBar Grid.Row="0">
            <muxc:MenuBarItem Title="_File">
                <muxc:MenuFlyoutItem Text="_Settings..." Click="Settings_Click" />
                <muxc:MenuFlyoutItem Text="E_xit" Click="Exit_Click" />
            </muxc:MenuBarItem>
            <muxc:MenuBarItem Title="_Help">
                <muxc:MenuFlyoutItem Text="_About" Click="About_Click" />
            </muxc:MenuBarItem>
        </muxc:MenuBar>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="12">
            <TextBlock Text="dupdupninja" FontSize="28" />
            <TextBlock Text="WinUI 3 C++/WinRT skeleton" />
        </StackPanel>
    </Grid>
</Window>
