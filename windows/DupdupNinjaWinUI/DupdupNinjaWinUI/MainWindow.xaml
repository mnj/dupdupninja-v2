<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DupdupNinjaWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DupdupNinjaWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="dupdupninja">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="Scan/New fileset">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Scan Folder" Click="ScanFolder_Click" />
                        <MenuFlyoutItem Text="Scan Disk" Click="ScanDisk_Click" />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Setting" Label="Settings" Click="OpenSettings_Click" />
            <AppBarButton Icon="Help" Label="About" Click="OpenAbout_Click" />
        </CommandBar>

        <Grid Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Use the buttons above to scan or open Settings/About"
                TextAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold" />
        </Grid>

        <Grid Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="StatusText"
                Margin="12,8"
                Text="Status: Idle"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis" />
            <ProgressBar
                x:Name="ScanProgress"
                Grid.Column="1"
                Margin="12,8"
                Minimum="0"
                Maximum="1"
                Value="0" />
            <Button
                x:Name="CancelButton"
                Grid.Column="2"
                Margin="12,8"
                Content="Cancel"
                IsEnabled="False"
                Click="CancelScan_Click" />
        </Grid>
    </Grid>
</Window>
