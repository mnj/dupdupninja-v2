<Window
    x:Class="DupdupNinjaWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="dupdupninja">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <muxc:MenuBar Grid.Row="0">
            <muxc:MenuBarItem Title="_File">
                <muxc:MenuFlyoutItem Text="E_xit" Click="Exit_Click" />
            </muxc:MenuBarItem>
            <muxc:MenuBarItem Title="_Scan">
                <muxc:MenuFlyoutItem Text="Scan _Folder..." Click="ScanFolder_Click" />
                <muxc:MenuFlyoutItem Text="Scan _Disk..." Click="ScanDisk_Click" />
            </muxc:MenuBarItem>
        </muxc:MenuBar>

        <TextBlock
            Grid.Row="1"
            Margin="24"
            FontSize="20"
            TextWrapping="Wrap"
            x:Name="StatusText"
            Text="dupdupninja (WinUI 3 skeleton)" />
    </Grid>
</Window>
