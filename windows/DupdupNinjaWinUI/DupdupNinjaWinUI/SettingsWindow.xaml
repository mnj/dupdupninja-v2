<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DupdupNinjaWinUI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Spacing="16" Padding="24">
                <TextBlock Text="Scanning" FontSize="28" FontWeight="SemiBold" />

                <ToggleSwitch
                    x:Name="CaptureSnapshotsToggle"
                    Header="Capture video snapshots"
                    Toggled="CaptureSnapshotsToggle_Toggled" />

                <StackPanel Spacing="8">
                    <TextBlock Text="Snapshots per video" />
                    <NumberBox
                        x:Name="SnapshotsPerVideoBox"
                        Minimum="1"
                        Maximum="10"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="Snapshot max size" />
                    <ComboBox x:Name="SnapshotMaxDimCombo">
                        <ComboBoxItem Content="128 x 128" Tag="128" />
                        <ComboBoxItem Content="256 x 256" Tag="256" />
                        <ComboBoxItem Content="512 x 512" Tag="512" />
                        <ComboBoxItem Content="768 x 768" Tag="768" />
                        <ComboBoxItem Content="1024 x 1024" Tag="1024" />
                        <ComboBoxItem Content="1536 x 1536" Tag="1536" />
                        <ComboBoxItem Content="2048 x 2048" Tag="2048" />
                    </ComboBox>
                </StackPanel>

                <TextBlock Text="Matching" FontSize="24" FontWeight="SemiBold" Margin="0,12,0,0" />

                <StackPanel Spacing="8">
                    <TextBlock Text="Similar mode pHash max distance" />
                    <NumberBox
                        x:Name="SimilarPhashDistanceBox"
                        Minimum="1"
                        Maximum="32"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="dHash max distance" />
                        <NumberBox
                            x:Name="SimilarDhashDistanceBox"
                            Width="170"
                            Minimum="1"
                            Maximum="32"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline" />
                    </StackPanel>
                    <StackPanel Spacing="8">
                        <TextBlock Text="aHash max distance" />
                        <NumberBox
                            x:Name="SimilarAhashDistanceBox"
                            Width="170"
                            Minimum="1"
                            Maximum="32"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Filesets" FontSize="24" FontWeight="SemiBold" Margin="0,12,0,0" />

                <StackPanel Spacing="8">
                    <TextBlock Text="Default fileset folder" />
                    <TextBox
                        x:Name="DefaultFilesetFolderText"
                        IsReadOnly="True"
                        PlaceholderText="Using application default" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Change..." Click="ChangeFilesetFolder_Click" />
                        <Button Content="Reset" Click="ResetFilesetFolder_Click" />
                    </StackPanel>
                    <TextBlock x:Name="EffectiveFolderText" TextWrapping="WrapWholeWords" Opacity="0.8" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Padding="16">
            <Button Content="Cancel" Click="Cancel_Click" />
            <Button Content="Save" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
